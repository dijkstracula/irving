// From ivy/ivy_lexer.py
COMMA       = { "," }
ISA         = { "isa" }
LPAREN      = { "(" }
RPAREN      = { ")" }
PLUS        = { "+" }
MINUS       = { "-" }
TIMES       = { "*" }
DIV         = { "/" }
NOT         = { "~" }
AND         = { "&" }
OR          = { "|" }
EQ          = { "=" }
NEQ         = { "~=" }
SEMI        = { ";" }
ASSIGN      = { ":=" }
DOT         = { "." }
LCB = { "{" }
RCB = { "}" }
ARROW = { "->" }
IFF = { "<->" }
COLON = { ":" }
DOTS = { ".." }
DOTDOTDOT = { "..." }
DOLLAR = { "$" }
CARET = { "^" }
LB = { "[" }
RB = { "]" }
LT = { "<" }
LE = { "<=" }
GT = { ">" }
GE = { ">=" }

WHITESPACE = _{ " " | "\t" | "\r" | NEWLINE }

symbol = @{ ASCII_ALPHA ~ ("_" | ASCII_ALPHANUMERIC)* }

nativechar = { !">>>" ~ ANY }
NATIVEQUOTE = { "<<<" ~ nativechar* ~ ">>>" }

number = @{ (ASCII_NONZERO_DIGIT ~ ASCII_DIGIT+ | ASCII_DIGIT) }

// Declaration kinds: from ivy2/ivylang.ivy's `decl.parse()`.

ACTION       = _{ "action" }
INCLUDE      = _{ "include" }
VAR          = _{ "var" | "destructor" | "function" }
HEADER       = _{ "header" }
INTERPRET    = _{ "interpret" }
MODULE       = _{ "module" }
INSTANTIATE  = _{ "instantiate" }
OBJECT       = _{ "object" }
INSTANCE     = _{ "instance" }
AUTOINSTANCE = _{ "autoinstance" }
IMPORT       = _{ "import" }
EXPORT       = _{ "export" }
INIT         = _{ "init" }
AFTER        = _{ "after" }

// These are not explicitly in ivy2's `decl.parse()` but I don't know how we
// avoid having them
BEFORE       = _{ "before" }
EXTRACT      = _{ "extract" | "process" }
